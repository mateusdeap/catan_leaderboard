<div class="bg-white shadow-md rounded-md overflow-hidden max-w-lg mx-auto mt-16">
  <div class="bg-gray-100 py-2 px-4">
    <h1 class="text-3xl font-semibold text-gray-800">Leaderboard</h1>
  </div>
  <ul class="divide-y divide-gray-200">
    <% @players.each_with_index do |player, position| %>
      <li class="flex items-center py-4 px-6">
        <span class="text-gray-700 text-lg font-medium mr-4"><%= position + 1 %>.</span>
        <div class="flex-1">
          <h3 class="text-lg font-medium text-gray-800"><%= player.name %></p>
          <p class="text-gray-600 text-base"><%= player.score %> victories</p>
        </div>
      </li>
    <% end %>
  </ul>
</div>
